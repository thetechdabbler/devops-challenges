server {
    listen {port};                 # BUG 1: missing {{ }} â€” Jinja2 variable syntax required
    server_name {{ server_name }};

    location / {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host {{ server_name | string }};   # BUG 4: unnecessary | string filter
        proxy_set_header X-Real-IP $remote_addr;
    }
}
